@model List<Pokemon>
@{
    ViewData["Title"] = "PokeDex";
}

<div class="text-center">
    <table class="table table-stripped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Img</th>
                <th>Type</th>
                <th>SubType</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Next Evolution</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(Pokemon x in Model)
                {
                    <tr href="#@x.id">
                        <td>@x.id</td>
                        <td>@x.name</td>
                        <td><img src="@x.image" /></td>
                        <td>@x.type</td>
                        <td>@x.subType</td>
                        <td>@x.height</td>
                        <td>@x.weight</td>
                        <td><a href="#@x.nextEvolution">Next Evolution</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
